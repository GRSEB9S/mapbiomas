{
  "name": "mapbiomas",
  "scripts": {
    "postdeploy": "bin/setup"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "TERRAS_API_URL": {
      "required": true
    },
    "TERRAS_MAP_API_URL": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": {
      "required": true
    },
    "NODE_ENV": {
      "required": true
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
